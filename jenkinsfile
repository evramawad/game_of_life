node{
        stage ('SCM Checkout'){
          git 'https://github.com/evramawad/game_of_life'
        }
        
        stage ('Compile Stage'){
        def mvnHome = tool name: 'maven' , type: 'maven'
                sh "${mvnHome}/bin/mvn clean package"
         }
         
        stage ('Deployment Stage') {
             sshagent (['tomcat-dep']) {
                 sh 'scp -o StrictHostKeyChecking=no target/*.war tomcat@192.168.191.50:source/apache-tomcat-8.5.41/webapps/'
             }
        }
}
